root = true

[*]
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab
trim_trailing_whitespace = true

[*.{html,xml,css,less,sass,js,es,json}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
